{
  "name": "webgl-playground",
  "version": "1.0.0",
  "description": "resources: http://blog.keithcirkel.co.uk/how-to-use-npm-as-a-build-tool/, http://webglfundamentals.org/webgl/lessons/webgl-shaders-and-glsl.html",
  "scripts": {
    "build:dist": "node run process_shaders && npm run clean && browserify js/apps/simple_point.js > dist/js/simple_point.js",
    "process_shaders" : "node scripts/process_shaders.js",
    "lint": "jshint **.js",
    "clean": "rm -rf dist && mkdirp dist/js",
    "watch:shaders": "onchange 'js/shaders/*.vert' 'js/shaders/*.frag' -v -- npm run process_shaders",
    "watch:app": "watchify js/apps/simple_triangle2.js -v -o dist/js/simple_triangle2.js",
    "watch": "npm run watch:shaders & npm run watch:app",
    "start:dev": "node run process_shaders && npm run watch & nodemon --watch js --watch server -e js server/index.js"
  },
  "author": "Juan Andres Andrango <juan@floored.com> (http://www.floored.com/)",
  "license": "ISC",
  "devDependencies": {
    "async": "^1.5.0",
    "jshint": "^2.8.0",
    "nodemon": "^1.8.0",
    "watchify": "^3.5.0"
  },
  "dependencies": {
    "ejs": "^2.3.4",
    "express": "^4.13.3",
    "gl-matrix": "^2.3.1",
    "mkdirp": "^0.5.1"
  },
  "engines": {
    "node" : "v4.0.0",
    "npm": "2.13.x"
  }
}
